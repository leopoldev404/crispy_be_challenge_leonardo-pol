@page
@model IndexModel
@{
    ViewData["Title"] = "Todo List";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List App</title>
</head>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    h3 {
        color: #333;
    }

    div {
        margin-bottom: 15px;
    }

    input {
        padding: 10px;
        width: 200px;
        border-radius: 3px;
        border: 1px solid #ccc;
    }

    button {
        padding: 10px 20px;
        background-color: #007BFF;
        color: white;
        border: none;
        border-radius: 3px;
        cursor: pointer;
    }

    ul {
        list-style-type: none;
        padding: 0;
        display: flex;
    }

    li {
        margin-bottom: 2px;
        padding: 10px;
        border-radius: 3px;
        font-weight: 600;
    }
</style>

<body>
    <h1>To-Do List</h1>
    <br>
    <ul>
        @foreach (var todoItem in Model.TodoItems)
        {
            <li style="color: @(todoItem.Completed ? "green" : "red")">
                @todoItem.Text
            </li>
        }
    </ul>
    <br>

</body>

</html>