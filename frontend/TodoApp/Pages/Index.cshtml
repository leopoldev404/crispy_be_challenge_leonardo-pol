@page
@model IndexModel
@{
    ViewData["Title"] = "Todo List";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List App</title>
</head>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    h3 {
        color: #333;
    }

    div {
        margin-bottom: 15px;
    }

    input {
        padding: 10px;
        width: 200px;
        border-radius: 3px;
        border: 1px solid #ccc;
    }

    button {
        padding: 10px 20px;
        background-color: #007BFF;
        color: white;
        border: none;
        border-radius: 3px;
        cursor: pointer;
    }

    ul {
        list-style-type: none;
        padding: 0;
        display: flex;
        flex-direction: column;
    }

    li {
        display: flex;
    }
</style>

<body>
    <h1>To-Do List</h1>
    <br>
    @if (Model.Todos.Count == 0)
    {
        <p class="empty">The list is empty</p>
    }
    else
    {
        <ul class="list-unstyled">
            @foreach (var todo in Model.Todos)
            {
                <li>
                    <p style="color: @(todo.Completed ? "green" : "red")">@todo.Text</p>
@* 
                    <form method="post" asp-page="Index" asp-page-handler="Remove" style="display: inline">
                        <input type="hidden" name="Id" value="@todo.Id" />
                        <button type="submit" class="btn btn-link">Delete</button>
                    </form> *@
                    @* <form method="post" asp-page="Index" asp-page-handler="Edit" style="display: inline">
            <input type="hidden" name="Id" value="@todo.Id" />
            <button type="submit" class="btn btn-link">Mark as complete</button>
            </form> *@
                </li>
            }
        </ul>
    }
    <br>
    <form asp-page="Index" method="post" class="form-inline">
        <input type="text" id="Text" name="Text" class="form-control" placeholder="Text" />
        <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Add</button>
    </form>
</body>

</html>